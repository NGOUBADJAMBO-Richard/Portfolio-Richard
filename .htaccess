# Apache Server Configuration (.htaccess)
# For NGOUBADJAMBO Richard Portfolio

# Enable GZIP Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Default: 2 days
  ExpiresDefault "access plus 2 days"
  
  # HTML files: 12 hours
  ExpiresByType text/html "access plus 12 hours"
  
  # CSS files: 1 year
  ExpiresByType text/css "access plus 1 year"
  
  # JavaScript files: 1 year
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Image files: 1 year
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # Font files: 1 year
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Prevent Clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Enable XSS Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Feature Policy
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  
  # HTTPS Strict Transport Security (uncomment for HTTPS)
  # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Disable directory listing
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

# Protect sensitive files
<FilesMatch "\.(env|json|lock|config)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Rewrite engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Remove .html extension (optional)
  # RewriteCond %{REQUEST_FILENAME} !-f
  # RewriteCond %{REQUEST_FILENAME} !-d
  # RewriteRule ^([^\.]+)$ $1.html [NC,L]
  
  # Redirect HTTP to HTTPS (uncomment for production)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Redirect www to non-www (uncomment if needed)
  # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  # RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [L,R=301]
</IfModule>

# Enable ETags for caching
<IfModule mod_headers.c>
  Header append Cache-Control "public"
</IfModule>

# Block access to git and other version control
<FilesMatch "^(\.git|\.gitignore|\.hg|\.svn)">
  Order allow,deny
  Deny from all
</FilesMatch>

# Allow access to common files
<FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|otf)$">
  Header set Cache-Control "max-age=31536000, public"
  Header unset Pragma
  Header unset Expires
</FilesMatch>
